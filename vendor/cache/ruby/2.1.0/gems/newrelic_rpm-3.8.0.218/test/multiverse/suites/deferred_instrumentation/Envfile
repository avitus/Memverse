suite_condition("Sinatra not compatible with 1.8.6") do
  RUBY_VERSION != '1.8.6'
end

gemfile <<-RB
  gem 'sinatra', '~> 1.4.0', :require => false
  gem 'rack-test', :require => 'rack/test'
RB

