gemfile <<-RB
  gem 'rack'
  if RUBY_VERSION == '1.8.6'
    gem 'activerecord', '2.3.14'
  elsif RUBY_PLATFORM == 'java'
    gem 'activerecord-jdbcsqlite3-adapter', '1.2.2.1'
    gem 'jdbc-sqlite3', '3.7.2'
    gem 'activerecord', '~> 3.2.0'
  else
    gem 'activerecord', '~> 3.2.0'
    gem 'sqlite3', '1.3.8'
  end
RB
