source 'https://rubygems.org'

gem 'railties', '>= 4.0.0'
gem 'activerecord', '>= 4.0.0', :require => 'active_record'
gem 'rspec-rails', '>= 2.0'

platforms :ruby, :rbx do
  gem 'sqlite3'
end
platforms :jruby do
  gem 'activerecord-jdbcsqlite3-adapter', '>= 1.3.0'
end
platforms :rbx do
  gem 'rubysl', '~> 2.0'
  gem 'racc'
  gem 'rubysl-test-unit'
  gem 'rubinius-developer_tools'
end

gemspec :path => '../'
