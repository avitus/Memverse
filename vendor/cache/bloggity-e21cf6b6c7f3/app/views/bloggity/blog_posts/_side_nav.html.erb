			<a href='http://www.scripturestickies.com/?referrer=Memverse'><%= image_tag "bloggity/scripturestickiesad.jpg", {border: 0} %></a>
			<br />
		<% else %>
			<!-- Show Bible Bee ad to logged in users -->		
			<a href='http://www.biblebee.org/?banner=516'><img src='https://www.biblebee.org/userfiles/banners/250x250.jpg' border='0'></a>	
			<br />
		<% end %>	
		
		<br />	
	
		<h4 class="subtitle">Recent Posts</h4>
		
		<ul class="blog_list">
			<% if @recent_posts.empty? %>
				<li>None</li>
			<% else %>
				<% for blog_post in @recent_posts %>
					<li><%= link_to blog_post.title, blog_named_link(blog_post, :list, {:page => @blog_page}) %></li>
				<% end %>
			<% end %>
		</ul>
		
		<% if @recent_posts %>
			<div style="padding-bottom:4px;">More pages</div> <%= paginate @recent_posts %>
		<% end %>
			
		<!-- Beacon Ads Zone Code -->
		<div id="bsap_1270599" class="bsarocks bsap_e48f1701bd375546050e63082dc7a164"></div>
		<!-- End Beacon Ads Zone Code -->						
		
		<h4 class="subtitle">RSS Feed</h4>
		<div style="margin-top:4px">
			<%= link_to "#{image_tag "bloggity/feed-icon.png"} Subscribe to feed".html_safe, "http://feeds.feedburner.com/MemverseBlog", :style => 'text-decoration:none' %>
		</div>
		
		<h4 class="subtitle">Search Blog</h4>
		<div style="margin-top:4px">
			<%= form_tag blog_search_path, :method => :get do %>
				<%= text_field_tag( :search_param, params[:search_param], :style => "width:175px" ) %>
				<%= submit_tag "Search", :name => nil %>
			<% end %>
		</div>
		
