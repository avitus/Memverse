<!-- Namespace for Bloggity styles -->
<% content_for :body_css do %>id='bloggity_container'<% end -%>

<div id="search-box" class="center">
	<%= form_tag blog_search_path, :method => :get do %>
	  <p>
	    <%= text_field_tag( :search_param, params[:search_param], :size =>  50 ) %>
	    <%= submit_tag "Search Blog", :name => nil %>
	  </p>
	<% end %>
</div>

<br>

<div id="search_results">
  <%= render :partial=>'blog_search_results' %>
</div>
