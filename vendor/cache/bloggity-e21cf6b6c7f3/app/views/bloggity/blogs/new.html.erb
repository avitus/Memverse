<h1>New Blog</h1>

<%= form_for(@blog) do |f| %>

  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
	      <% @blog.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </p>
  <p>
    <%= f.label :url_identifier %><br />
    <%= f.text_field :url_identifier %>
  </p>
  <p>
    <%= f.label :stylesheet %> (leave blank to use default)<br />
    <%= f.text_field :stylesheet %>
  </p>
  <p>
    <%= f.label :feedburner_url %> <br />
    <%= f.text_field :feedburner_url %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', blogs_path %>