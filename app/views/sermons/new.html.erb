<h1>New sermon</h1>

<% form_for(@sermon, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label 		:title %><br />
    <%= f.text_field 	:title %>
  </p>
  <p>
    <%= f.label 		:summary %><br />
    <%= f.text_area 	:summary %>
  </p>
  <p>
	<%= f.label 		:church_id %><br />
	<%= f.text_field 	:church_id %>
  </p>
  <p>
    <%= f.label 		:pastor_id %><br />
    <%= f.text_field 	:pastor_id %>
  </p>
  <p>
    <%= f.label 		:Key_Verse %><br />
    <%= f.text_field 	:uberverse_id %>
  </p>  
  <p>
    <%= f.label 		:mp3 %><br />
    <%= f.file_field 	:mp3 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sermons_path %>

<!-- http://www.devbridge.com/projects/autocomplete/jquery/ -->
<script type="text/javascript">
	$(document).ready(function() {	
		a = $('#sermon_church_id').autocomplete({ serviceUrl:'/profile/church_autocomplete'
		});		
		b = $('#sermon_pastor_id').autocomplete({ serviceUrl:'/pastors/pastor_autocomplete'
		});
	});
</script>
