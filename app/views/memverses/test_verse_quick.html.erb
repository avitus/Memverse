			// Check whether we're done for the day
			if (ondeck.finished)
			{
				// TODO: Need to update progress table
				window.location="./progress";
				return (false);
			}
								
			// == Update references on testing box
			$(".verse-ref").text(ondeck.ref);
						
			// == Clear the input box and put cursor in input box
			$("#verseguess").val('');
			$("#verseguess").focus();
			
			// == Clear the feedback 
			$("#ajaxWrapper").text('');
								
			// == Update prior verse and reference	
			if (typeof(ondeck.priortxt) !== 'undefined' && ondeck.priortxt != null)
			{
				$(".priorVerse").show()				
				$(".prior-text").text(ondeck.priortxt);   		
				$(".prior-versenum").text(ondeck.priornum);				
			}
			else 
			{
				$(".priorVerse").hide()
			}

											
			// == Reset the flashcard 
			$('.quickFlip').quickFlipper( {}, 0 );
			
			// == Update front of flash card with Mnemonic (if necessary)
						
			// == Update current verse on back of flash card
			$("#flashcard-back-text #current-text").text(ondeck.txt);
			$(".current-versenum").text(ondeck.versenum);
			
			// == Score verse
			$.getJSON("/memverses/mark_test_quick", { mv: mv_testing, q: q  },
				function(data){
					if (data.msg) 
					{
						// Give user a nice response
						alert(data.msg);												
					}
					
					
					// data for the verse we're now testing
					mv_testing 	= ondeck.id;
					mv_verse	= ondeck.txt; // where is this used?
					mv_versenum = ondeck.versenum; // where is this used?
					
					
					// == Runs only on successful callback from mark test call above
					ondeck = stageverse(skip=false, mv_testing)	
					
			});	
			
			// == Return false
			return (false);	
		})	
		
	});
</script>






