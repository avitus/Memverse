<% page_title I18n.t :reftest, :scope => 'page_titles' %>
<% page_banner I18n.t :reftest, :scope => 'page_titles' %>
<!-- Focus cursor on verse entry box -->
<body onload="document.getElementById('answer').focus()">

<fieldset id="reftest">
	<legend>Verse <%=@question_num+1%></legend>
	<!-- Verse Text -->
	<div id="reftestVerse">
		<%= @ref%>
	</div>
</fieldset>

<fieldset id=reftest-answer class="entry-form">
		<legend>Reference</legend>
			<% form_tag :action => 'mark_reftest' do %>

				<%= text_field_tag(:answer, params[:answer], :autocomplete => "off" )%>
				<%= submit_tag "Submit", :class => "submit" %>								
				<%= submit_tag "Done", 	 :class => "submit" %>
	
			<% end %>					
</fieldset>	

