<ul id="upcoming-verses">
	<% if @upcoming_verses.empty? %>

		<li>(None)</li>		 				

	<% else%>
		
		<% for mv in @upcoming_verses[0..10] %>
			<li class="upcoming-verse-ref <%= cycle("gray2", "white2") %>">
				<%= mv.verse.ref %>	 		
			</li>
		<% end %>
		
		<% if @upcoming_verses.length > 10 %>
			<li></li>
			<li>( ... <%= @upcoming_verses.length-10 %> more )</li>
		<% end %>
		
	<% end %>
</ul>			

	
	