<div class="verse-list">

	<table cellpadding="6" cellspacing="1" border="1">
	  <tr>		  	 
		  <th><b><%= link_to 'Verse',		:action => 'show_all_my_verses'									%></b></th>
		  <th><b><%= link_to 'Version',		:action => 'show_all_my_verses'									%></b></th>
		  <th><b><%= link_to 'eFactor',		:action => 'show_all_my_verses', :sort_order => 'efactor'		%></b></th>
		  <th><b><%= link_to 'Status', 		:action => 'show_all_my_verses', :sort_order => 'status'		%></b></th>		  				  	  		  		  		  
		  <th><b><%= link_to 'Last Tested',	:action => 'show_all_my_verses', :sort_order => 'last_tested'	%></b></th>	
		  <th><b><%= link_to 'Next Test',	:action => 'show_all_my_verses', :sort_order => 'next_test'		%></b></th>
		  <th><b><%= link_to 'N', 			:action => 'show_all_my_verses', :sort_order => 'rep_n'			%></b></th>
		  <th><b><%= link_to 'Interval', 	:action => 'show_all_my_verses', :sort_order => 'test_interval'	%></b></th>
		  <th><b><%= link_to 'Attempts', 	:action => 'show_all_my_verses', :sort_order => 'attempts'		%></b></th>
		  <th><b><%= link_to 'Ref Int', 	:action => 'show_all_my_verses', :sort_order => 'ref_interval'	%></b></th>		  	  		  
		  <th><b><%= link_to 'Ref Test', 	:action => 'show_all_my_verses', :sort_order => 'next_ref_test'	%></b></th>		  	  		  
		  <th>Del</th>
		  <th>Verse Status</th>
	  </tr>
	<% for mv in @my_verses %>
	  <tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">
		<td align="left">  <%= mv.verse.ref				%></td>		 
		<td align="center"><%= mv.verse.translation		%></td>		
	 	<td align="center"><%= mv.efactor				%></td>	
	 	<td align="center"><%= mv.status				%></td>			
	 	<td align="center"><%= mv.last_tested			%></td>
	 	<td align="center"><%= mv.next_test				%></td>	
	 	<td align="center"><%= mv.rep_n					%></td>			
	 	<td align="center"><%= mv.test_interval			%></td>	
	 	<td align="center"><%= mv.attempts				%></td>
	 	<td align="center"><%= mv.ref_interval			%></td>
	 	<td align="center"><%= mv.next_ref_test			%></td>
		<td align="center"><%= link_to '[x]', {:action => 'destroy_mv', :id => mv.id }, 
								:confirm => 'Are you sure you want to delete this memory verse?', 
								:method => :post %></td>
	 	<td align="center" class="flag_verse" id=<%= mv.verse.id %>><%= 			
			if mv.verified?
				link_to_remote mv.verse.error_flag ? "Error Reported" : "Verified", 
								:url 		=> { :action => "toggle_verse_flag", :id => mv.verse.id },
								:update 	=> mv.verse.id
			elsif !mv.locked?
				link_to '[Editable]', :action => 'edit_verse', :mv_id => mv.id
			else
				'Pending Verification'
			end
		%></td>
	  </tr>
	<% end %>

	</table>

</div>

<!-- Highlight verse to be verified -->
<script>
  $(document).ready(function(){    
    $('.flag_verse').click(function () { 
      $(this).closest('tr').toggleClass("hilite"); 
    });

  });
</script>
