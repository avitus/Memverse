<% page_title I18n.t :popular_verses, :scope => 'page_titles' %>
<% page_description I18n.t :popular_verses, :scope => 'page_descriptions' %>

<div class="white-box-with-margins">

<h1>Most Popular Memory Verses</h1>

<div id="pop-verses-table" class="verse-list">

	<div class="facebook-like-button">
		<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like show_faces="true" width="450"></fb:like>
	</div>
	
	<br>
	
	<table class="memverse-standard menu-popular" cellpadding="4" cellspacing="1" border="1">
		<thead>
			<tr>
				<th>Rank</th>
				<th>Verse</th>
				<th colspan="6">Translations</th>						
			</tr>
		</thead>

		<tbody>		
			<% for vs in @vs_list %>
			<tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">
				<td align="center"><%=@vs_list.index(vs)+1+(@page*@page_size)%></td>		 
				<td><%= vs.book				%> <%= vs.chapter %>:<%= vs.versenum %></td>			
				
				<% if vs.niv %>
					<td <%=css_in_user_list(vs.niv)%> >
						<%= link_to 'NIV', verse_path(vs.niv) %>
						<em><%= vs.niv_text %></em>
					</td>
				<% else %>
					<td></td>
				<% end %>
				
				<% if vs.nas %>		
					<td <%=css_in_user_list(vs.nas)%> >
						<%= link_to 'NAS', verse_path(vs.nas) %>
						<em><%= vs.nas_text %></em>
					</td>												
				<% else %>
					<td></td>
				<% end %>
								
				<% if vs.esv %>
					<td <%=css_in_user_list(vs.esv)%> >
						<%= link_to 'ESV', verse_path(vs.esv) %>
						<em><%= vs.esv_text %></em>
					</td>			
				<% else %>
					<td></td>
				<% end %>
					
				<% if vs.nkj %>	
					<td <%=css_in_user_list(vs.nkj)%> >
						<%= link_to 'NKJ', verse_path(vs.nkj) %>
						<em><%= vs.nkj_text %></em>
					</td>				
				<% else %>
					<td></td>
				<% end %>
				
				<% if vs.kjv %>
					<td <%=css_in_user_list(vs.kjv)%> >
						<%= link_to 'KJV', verse_path(vs.kjv) %>
						<em><%= vs.kjv_text %></em>
					</td>			
				<% else %>
					<td></td>
				<% end %>	
									
			</tr>
			<% end %>
		</tbody>
	</table>

	<div class="pagination" align="center">
		<table cellpadding="6" cellspacing="1" border="0"><tr>
			<td>
				<% if @page > 0 %>
					<%= link_to '<<', :controller => 'memverses', :action => 'pop_verses', :page => @page-1%>
				<% end %>
			</td>
			
			<td>
				Page <%= @page+1 %>
			</td>
			<td>
				<% if @page < 4 %>
					<%= link_to '>>', :controller => 'memverses', :action => 'pop_verses', :page => @page+1%>
				<% end %>
			</td>
		</tr></table>
	</div>
	
	<div class="footnote">
		Verses already included in your list of memory verses are highlighted with a dark background
	</div>

</div>
</div><!-- End white box with margins -->

<!-- http://www.webdesignerwall.com/tutorials/jquery-tutorials-for-designers/ -->
<script type="text/javascript">
$(document).ready(function(){

	$(".menu-popular a").hoverIntent(function() {
		$(this).next("em").animate({opacity: "show", left: "30em"}, "slow");
	}, function() {
		$(this).next("em").animate({opacity: "hide", left: "32em"}, "medium");
	});


});
</script>
