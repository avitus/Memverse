<!-- Search for a verse -->
<div class="quick-start-enter-verse quick-start-add-section">
	
	<div class="top-heading">
    	<h3><span>Select a Bible Verse</span></h3>
    </div>
    
    <!-- Reference entry box -->
    <%= form_tag :action => 'add_verse' do %>
        <div class="verse-field">
        	<div class="ui-widget">
        		<label class="tag">Verse:</label>
            	<%= text_field_tag(:verse, params[:verse], :class => "verse-search" )%> 
				<img class="spinner" id="ajax_spinner" src="/assets/indicator2.gif" alt="Searching ..." style="display: none" />
            </div>
        </div>
	<% end %>
        
    
    <div id="quick-start-verse-selection">
    	
	    <!-- Show found verse -->
		<div id="existing-verse-add" class="quick-start-show-verse">
		    <div id="foundVerse"></div>
		    <div id="quick-start-add-verse" class="quick-start-add-verse"></div>
		</div>
		
	    <!-- Enter a new verse -->
		<div id="new-verse-entry">
	    	<label class="tag">Enter Verse Text:</label>
			<%= text_area_tag(:versetext, params[:versetext], :overflow => "hidden", :class => "verse-entry-box" )%>
		    <div class="quick-start-add-verse">
		   		<%= link_to '', verses_path(), :method => :post, :class => "quick-start-add-button", :format => :json, :remote => true %>
		   	</div>
	    </div>    	
	    	    	  	
    </div>
	
    <!-- Start memorizing button -->
    <div id="start-memorizing" class="quick-start-selection">
		<ul>
			<li id="start-memorizing-button"><%= link_to 'Start Memorizing', test_verse_quick_path, :class => 'active' %></li>
		</ul>    	
    </div>      
	
</div>


<!-- Popular verse selection -->	        
<div class="quick-start-popular-scroll quick-start-add-section">
	<%= render "verses/popular_scroll" %>
</div>

