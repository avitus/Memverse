<% if @user == current_user %>
	<% page_title I18n.t :my_dashboard, :scope => 'page_titles' %>
<% else %>
	<% page_title I18n.t :user_profile, :scope => 'page_titles', :name => @user.name_or_login %>
<% end %>
<div class="user-dashboard white-box-bg">
	<div class="three-box2">
    	
    	<div class="user-details">
        	<div class="user-details-img">
            	<span class="avatar"><a href="#"><%= image_tag @user.blog_avatar_url -%></a></span>
                <span class="edit"><a href="#">Edit</a></span>
            </div>
            <div class="user-details-text">
            	<h4><%= @user.name_or_login %></h4>
                <ul>
                	<li>
                    	<div class="member-list"><span>Member Since: </span><%= @user.created_at.to_date %></div>
                        <div class="edit-option"><a href="#">Edit</a></div>
                    </li>
                    <li>
                    	<div class="member-list"><span>Email: </span><%= @user.email %></div>
                        <div class="edit-option"><a href="#">Edit</a></div>
                    </li>
                </ul>
            </div>
        </div>
    	
		<div class="user-settings">
			<div class="user-settings-text">
				<ul>
					<li>
						<div class="user-option-list"><span>Location: </span>
							<% if @user.american_state %>	
								<%= @user.american_state.name + ", " + @user.country.printable_name %></div>
							<% else %>
								<%= @user.country ? @user.country.printable_name : "" %></div>
							<% end %>
			            <div class="edit-option"><a href="#">Edit</a></div>
		            </li>
		            <li>
		            	<div class="user-option-list"><span>Language: </span><%= @user.language %></div>
		                <div class="edit-option"><a href="#">Edit</a></div>
		            </li>
		            <li>
		            	<div class="user-option-list"><span>Church: </span><%= @user.church ? @user.church.name : "" %></div>
		                <div class="user-option-info"><%= @user.church ? link_to(image_tag("blue-icon.png", :width=>"16", :height=>"16"), { :controller => "profile", :action => "show_church", :church => @user.church.id }) : "" %></div>
		            </li>
		        </ul>
	        </div>
	    </div>
        
	    <div class="user-work-load">
	    	<span>Memory Time:</span> <%= @user.work_load %> Mins / Day
	        <% if @user == current_user %>
	        	<div class="view-button"><%= link_to image_tag("view.png", :width=>"192", :height=>"25", :alt=>"View Of All Your Verses"), manage_verses_path %></div>
	        <% end %>
	    </div>
	    
	    <div class="clr"></div>
        
    </div>
</div> <!-- end: user-details -->


<div><img src="/images/trans.png" width="1" height="10" alt="" /></div>

<div class="main-content"><!--main-content start-->
	<div class="main-left"><!--main-left start-->
    	<div class="left-widget">
        	<h2>Complete Verses</h2>
            <div class="book"><%= @user.memorized %></div>
        </div>
        <div class="left-widget pad">
        	<h2>Accomplishments</h2>
            <ul>
            	<li><a href="#">Read Memverse Tutorial</a></li>
                <li><a href="#">Started Learning <span class="learn">35</span> verses</a></li>
