						<tr></tr>
					</tbody>							
				</table>        	
        	</div>
                      
            <div class="clr"></div>
            
       </div> <!--vs-distribution end-->
    </div> <!--main-right end-->
    
    <div class="clr"></div>
    
</div><!--main-content end-->
    
