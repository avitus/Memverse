<% if @user == current_user %>
 <% page_title I18n.t :my_dashboard, :scope => 'page_titles' %>
 <% page_banner I18n.t :my_dashboard, :scope => 'page_titles' %>
<% else %>
 <% page_title I18n.t :user_profile, :scope => 'page_titles', :name => @user.name_or_login %>
 <% page_banner I18n.t('page_titles.user_profile', :name => @user.name_or_login) %>
<% end %>
<%= render :partial => 'show_user' %>


