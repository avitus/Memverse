<% page_title I18n.t :popular_verses, :scope => 'page_titles' %>
<% page_description I18n.t :popular_verses, :scope => 'page_descriptions' %>
<h1>Top 100 Memory Verses</h1>

<p>This is a list of the most popular bible verses that users are memorizing on Memverse. Hover your 
	mouse over a given translation to see the verse.</p>

<div id="pop-verses-table" class="verse-list">
	
	<div class="facebook-like-button">
		<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like show_faces="true" width="450"></fb:like>
	</div>
	
	<br>	
	
	<table class="menu-popular" cellpadding="4" cellspacing="1" border="1">
		<tr>
			<th>Rank</th>
			<th>Verse</th>
			<th colspan="6">Translations</th>						
		</tr>
		
		<% for vs in @vs_list %>
		<tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">
			<td align="center"><%=@vs_list.index(vs)+1+(@page*@page_size)%></td>		 
			<td><%= vs.book				%> <%= vs.chapter %>:<%= vs.versenum %></td>			
			
			<% if vs.niv %>
				<td>
					<%= link_to 'NIV', :action => 'show_vs', :vs => vs.niv%>
					<em><%= vs.niv_text %></em>
				</td>
			<% else %>
				<td></td>
			<% end %>
			
			<% if vs.nas %>		
				<td>
					<%= link_to 'NAS', :action => 'show_vs', :vs => vs.nas%>
					<em><%= vs.nas_text %></em>
				</td>												
			<% else %>
				<td></td>
			<% end %>
							
			<% if vs.esv %>
				<td>
					<%= link_to 'ESV', :action => 'show_vs', :vs => vs.esv%>
					<em><%= vs.esv_text %></em>
				</td>			
			<% else %>
				<td></td>
			<% end %>
				
			<% if vs.nkj %>	
				<td>
					<%= link_to 'NKJ', :action => 'show_vs', :vs => vs.nkj%>
					<em><%= vs.nkj_text %></em>
				</td>				
			<% else %>
				<td></td>
			<% end %>
			
			<% if vs.kjv %>
				<td>
					<%= link_to 'KJV', :action => 'show_vs', :vs => vs.kjv%>
					<em><%= vs.kjv_text %></em>
				</td>			
			<% else %>
				<td></td>
			<% end %>	
			
			<% if vs.rsv %>
				<td>
					<%= link_to 'RSV', :action => 'show_vs', :vs => vs.rsv%>
					<em><%= vs.rsv_text %></em>
				</td>			
			<% else %>
				<td></td>
			<% end %>	
								
		</tr>
		<% end %>
	
	</table>

	<div class="pagination" align="center">
		<table cellpadding="6" cellspacing="1" border="0"><tr>
			<td>
				<% if @page > 0 %>
					<%= link_to '<<', :controller => 'info', :action => 'pop_verses', :page => @page-1%>
				<% end %>
			</td>
			
			<td>
				Page <%= @page+1 %>
			</td>
			<td>
				<% if @page < 9 %>
					<%= link_to '>>', :controller => 'info', :action => 'pop_verses', :page => @page+1%>
				<% end %>
			</td>
		</tr></table>
	</div>
</div>

<br>

<div>
	<ol>
		<li><%= link_to 'Learn More about Memverse 			-->', tutorial_path, :class => "action-link"%></li>	
		<li><%= link_to 'Sign Up and Start Memorizing Today	-->', signup_path, 	 :class => "action-link"%></li>			
	</ol>	
</div>


<!-- http://www.webdesignerwall.com/tutorials/jquery-tutorials-for-designers/ -->
<script type="text/javascript">
$(document).ready(function(){

	$(".menu-popular a").hoverIntent(function() {
		$(this).next("em").animate({opacity: "show", left: "30em"}, "slow");
	}, function() {
		$(this).next("em").animate({opacity: "hide", left: "32em"}, "medium");
	});


});
</script>
