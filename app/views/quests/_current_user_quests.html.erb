<div>
	<h2>Current Level Goals</h2>
	
	<table class="memverse-standard">
		<% for quest in current_user_quests %>
			<tr>
				<td>
					<% if quest.url %>
						<%= link_to_if(quest.url, quest.task, quest.url) %>
					<% else %>
						<%= quest.task %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
	
</div>

