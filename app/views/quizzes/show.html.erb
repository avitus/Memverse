<% page_title @quiz.name %>
<div class="white-box-with-margins">
	<h1><%=h @quiz.name %></h1>

	<p>
	  <b>Created by:</b> <%=h link_to(@quiz.user.name_or_login, @quiz.user) %>
	</p>
	<p>
	  <b>Start time:</b> <%= @quiz.start_time %>
	</p>
	<p><%=h @quiz.description.try(:html_safe) %></p>

	<p>
		<% if current_user == @quiz.user %>
			<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
		<% end %>
		<%= link_to 'Back to quizzes', quizzes_path %>
	</p>

	<p><%= link_to 'Add a question', new_quiz_question_path(:quiz => @quiz.id)%></p>

	<table class="memverse-standard">
		<%= render :partial => "quiz_questions/quizquestion_headings" %>
		<%= render :partial => "quiz_questions/quizquestion", :collection => @quizquestions %>
	</table>

	<p><%= link_to 'Add a question', new_quiz_question_path(:quiz => @quiz.id)%></p>

</div>
