<% if @posts.present? %>

    <h2>Posts to review</h2>

    <% for post in @posts %>

        <%= link_to "Post on #{post.postable.title}", post_url(post, post.user) %>
        by <%= post.user.name %><br />

    <% end %>

<% end %>

<% if @topics.present? %>

    <h2>Topics to review</h2>

    <% for topic in @topics %>

        <%= link_to topic, topic_url(topic) %>
        by <%= topic.user.name %><br />

    <% end %>

<% end %>
