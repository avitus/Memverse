<% if @posts.present? %>

    <h2>Posts to review</h2>

    <% for post in @posts %>

        <%= link_to "Post on #{post.topic}", forem.forum_topic_post_url(post.forum, post.topic, post) %>
        by <%= post.user.name %><br />

    <% end %>

<% end %>

<% if @topics.present? %>

    <h2>Topics to review</h2>

    <% for topic in @topics %>

        <%= link_to topic, forem.forum_topic_url(topic.forum, topic) %>
        by <%= topic.user.name %><br />

    <% end %>

<% end %>
