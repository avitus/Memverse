<div class="white-box-with-margins">
	<div class="user-list">
	
		<h1>Comments Requiring Approval</h1>
	
		<table cellpadding="6" cellspacing="1" border="1">  	
			<tr>
				<th>User</th>
				<th>Title</th>
				<th>Comment</th>
			</tr>
			
			<% for comment in @comments %>
				<tr valign="top">
					<td align="left"><%= comment.user ? comment.user.name_or_login : "[No user]" %></td>
					<td align="left"><%= comment.blog_post ? link_to(comment.blog_post.title, blog_named_link(comment.blog_post)) : "[Deleted blog post]" %></td>
					<td align="left"><%= comment.comment %></td>
					<td><%= link_to "Approve comment", { :controller => 'blog_comments', :action => :approve, :id => comment, :referring_url => params } %></td>
					<td><%= link_to "Delete comment", { :controller => 'blog_comments', :action => :destroy, :id => comment, :referring_url => params }, { :method => :delete, :confirm => "Are you sure you want to delete this comment?" } %></td>
				</tr>
			<% end %>
		</table>
	
		<h1>Latest Comments</h1>
	
		<table cellpadding="6" cellspacing="1" border="1">  	
			<tr>
				<th>User</th>
				<th>Title</th>
				<th>Comment</th>
				<th>Updated</th>
			</tr>
			
			<% for comment in @newest_comments %>
				<tr valign="top">
					<td align="left"> <%= comment.user.name_or_login %></td>
					<td align="left"> <%= comment.blog_post ? link_to(comment.blog_post.title, blog_named_link(comment.blog_post)) : "" %></td>
					<td align="left"> <%= comment.comment %></td>
					<td align="left"> <%= comment.updated_at.to_date %></td>
				</tr>
			<% end %>
		</table>
	
	</div>
</div>


