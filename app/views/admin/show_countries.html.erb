<div class="verse-list">

	<table class="sortable" id="usertable" cellpadding="6" cellspacing="0">
		
		<tr>
			<th align="left">Country</th>
			<th align="left">Rank</th>
			<th align="center">Users</th>	
		</tr>
		
		<% for country in @country_list %>
		<tr valign="top" class="<%= cycle('list-line-odd', 'list-line-even') %>">	
			<td> <%= country.printable_name	%></td>				
			<td align="center"> <%= country.rank %></td>												
			<td align="center"> <%= country.users.length %></td>												
			<td align="center"> <%= country.users_count %></td>												
			<td align="center"> <%= link_to "Fix User Count", {:action => 'update_country_user_count', :id => country } %></td>
		</tr>
		<% end %>
	
	</table>

</div>
